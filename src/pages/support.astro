---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getSupportPage } from '../lib/sanity';

// Fetch from Sanity
const supportPage = await getSupportPage();

// Page settings with fallbacks
const title = supportPage?.title || 'Contact Us';
const subtitle = supportPage?.subtitle || "We're here to help! If you have questions, feedback, or need assistance with Mealvana, please don't hesitate to reach out.";
const formTitle = supportPage?.formTitle || 'Send Us a Message';
const formspreeId = supportPage?.formspreeId || 'xldyagzr';
const subjectOptions = supportPage?.subjectOptions || ['General Question', 'Bug Report', 'Feature Request', 'Account Issue', 'Other'];
const contactTitle = supportPage?.contactTitle || 'Other Ways to Reach Us';
const contactEmail = supportPage?.contactEmail || 'support@mealvana.io';
const responseTime = supportPage?.responseTime || 'We typically respond within 24-48 hours.';
const faqTitle = supportPage?.faqTitle || 'Common Questions';
const addressTitle = supportPage?.addressTitle || 'Mailing Address';
const mailingAddress = supportPage?.mailingAddress || 'Milkman Inc.\n1500 1st Ave N\nBirmingham, AL 35203';

// Default FAQs
const defaultFaqs = [
  {
    question: 'How do I reset my password?',
    answer: 'You can reset your password from the login screen by tapping "Forgot Password" and following the instructions sent to your email.',
  },
  {
    question: 'How do I delete my account?',
    answer: `To delete your account and all associated data, please email us at ${contactEmail} with the subject line "Account Deletion Request."`,
  },
];

const faqs = supportPage?.faqs?.length > 0 ? supportPage.faqs : defaultFaqs;

// Parse address for display
const addressLines = mailingAddress.split('\n');
---

<Layout title={title}>
  <Header />

  <main class="bg-cream min-h-screen pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-6">
      <h1 class="text-4xl font-sansita font-bold text-text-dark mb-4">{title}</h1>
      <p class="text-text-secondary text-lg mb-8">
        {subtitle}
      </p>

      <hr class="border-text-dark/10 my-8" />

      <h2 class="text-2xl font-sansita font-bold text-text-dark mb-6">{formTitle}</h2>

      <form action={`https://formspree.io/f/${formspreeId}`} method="POST" class="space-y-6 mb-12">
        <div>
          <label for="name" class="block text-sm font-medium text-text-dark mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange focus:border-orange outline-none transition-colors bg-white"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-text-dark mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange focus:border-orange outline-none transition-colors bg-white"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-text-dark mb-2">Subject</label>
          <select
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange focus:border-orange outline-none transition-colors bg-white"
          >
            <option value="">Select a topic...</option>
            {subjectOptions.map((option: string) => (
              <option value={option}>{option}</option>
            ))}
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-text-dark mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange focus:border-orange outline-none transition-colors bg-white resize-y"
          ></textarea>
        </div>

        <button
          type="submit"
          class="btn-primary px-8 py-3 text-lg"
        >
          Send Message
        </button>
      </form>

      <hr class="border-text-dark/10 my-8" />

      <h2 class="text-2xl font-sansita font-bold text-text-dark mb-6">{contactTitle}</h2>
      <p class="text-text-secondary mb-2">
        <strong>Email:</strong> <a href={`mailto:${contactEmail}`} class="text-orange hover:underline">{contactEmail}</a>
      </p>
      <p class="text-text-secondary mb-8">{responseTime}</p>

      <hr class="border-text-dark/10 my-8" />

      <h2 class="text-2xl font-sansita font-bold text-text-dark mb-6">{faqTitle}</h2>

      <div class="space-y-6 mb-12">
        {faqs.map((faq: { question: string; answer: string }) => (
          <div class="card">
            <h3 class="text-lg font-sansita font-bold text-text-dark mb-2">{faq.question}</h3>
            <p class="text-text-secondary" set:html={faq.answer.replace(contactEmail, `<a href="mailto:${contactEmail}" class="text-orange hover:underline">${contactEmail}</a>`)} />
          </div>
        ))}
      </div>

      <hr class="border-text-dark/10 my-8" />

      <h2 class="text-2xl font-sansita font-bold text-text-dark mb-4">{addressTitle}</h2>
      <p class="text-text-secondary">
        {addressLines.map((line: string, i: number) => (
          <>
            {line}
            {i < addressLines.length - 1 && <br />}
          </>
        ))}
      </p>
    </div>
  </main>

  <Footer />
</Layout>
