---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getPosts, urlFor } from '../../lib/sanity';

const posts = await getPosts();
---

<Layout title="Blog" description="Nutrition tips, training guides, and race day strategies for endurance athletes.">
  <Header />

  <main class="pt-24 pb-20 min-h-screen bg-cream">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-sansita font-bold text-text-dark mb-4">
          Endurance Nutrition Blog
        </h1>
        <p class="text-lg text-text-secondary max-w-2xl mx-auto">
          Expert tips on fueling your training, optimizing race day nutrition, and achieving your endurance goals.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts?.map((post: any) => (
          <article class="card hover:shadow-lg transition-shadow">
            {post.heroImage && (
              <img
                src={urlFor(post.heroImage).width(400).height(200).url()}
                alt={post.title}
                class="w-full h-48 object-cover rounded-t-card -mt-6 -mx-6 mb-4"
                style="width: calc(100% + 48px);"
              />
            )}
            <div class="space-y-3">
              {post.publishedAt && (
                <time class="text-sm text-text-secondary">
                  {new Date(post.publishedAt).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              )}
              <h2 class="text-xl font-sansita font-bold text-text-dark">
                <a href={`/blog/${post.slug?.current}`} class="hover:text-orange transition-colors">
                  {post.title}
                </a>
              </h2>
              {post.description && (
                <p class="text-text-secondary line-clamp-3">
                  {post.description}
                </p>
              )}
              <a
                href={`/blog/${post.slug?.current}`}
                class="inline-flex items-center text-orange font-semibold hover:text-orange-dark transition-colors"
              >
                Read More
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      {(!posts || posts.length === 0) && (
        <div class="text-center py-20">
          <p class="text-text-secondary text-lg">No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </main>

  <Footer />
</Layout>
