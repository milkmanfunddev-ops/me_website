---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <Header />

  <main class="pt-24 pb-20 bg-cream min-h-screen">
    <article class="max-w-3xl mx-auto px-6">
      <!-- Back link -->
      <a
        href="/blog"
        class="inline-flex items-center text-text-secondary hover:text-orange transition-colors mb-8"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Blog
      </a>

      <!-- Hero Image -->
      {post.data.heroImage && (
        <img
          src={post.data.heroImage}
          alt={post.data.title}
          class="w-full h-64 md:h-96 object-cover rounded-card mb-8"
        />
      )}

      <!-- Post Header -->
      <header class="mb-10">
        {post.data.pubDate && (
          <time class="text-sm text-text-secondary">
            {new Date(post.data.pubDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        )}
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-sansita font-bold text-text-dark mt-2 mb-4 leading-tight">
          {post.data.title}
        </h1>
        {post.data.description && (
          <p class="text-xl text-text-secondary leading-relaxed">
            {post.data.description}
          </p>
        )}
      </header>

      <!-- Post Content -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>

      <!-- Share Section -->
      <div class="mt-16 pt-8 border-t border-border-light">
        <p class="text-text-secondary mb-4">Share this article:</p>
        <div class="flex gap-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-orange transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
            </svg>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-orange transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </a>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style is:global>
  .prose {
    color: var(--color-text-dark);
  }

  .prose h2, .prose h3, .prose h4 {
    font-family: var(--font-sansita);
    font-weight: 700;
    color: var(--color-text-dark);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h2 {
    font-size: 1.75rem;
  }

  .prose h3 {
    font-size: 1.5rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
  }

  .prose strong {
    color: var(--color-text-dark);
    font-weight: 600;
  }

  .prose em {
    font-style: italic;
  }

  .prose a {
    color: var(--color-orange);
    text-decoration: underline;
  }

  .prose a:hover {
    color: var(--color-orange-dark);
  }

  .prose blockquote {
    border-left: 4px solid var(--color-orange);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .prose code {
    background-color: var(--color-cream-dark);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: var(--color-blackberry);
    color: var(--color-text-light);
    padding: 1rem;
    border-radius: var(--radius-card);
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
  }
</style>
