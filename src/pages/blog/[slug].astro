---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PortableText from '../../components/PortableText.astro';
import { getPost, getPosts, urlFor } from '../../lib/sanity';

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts?.map((post: any) => ({
    params: { slug: post.slug?.current },
  })) || [];
}

const { slug } = Astro.params;
const post = await getPost(slug as string);

if (!post) {
  return Astro.redirect('/404');
}
---

<Layout title={post.title} description={post.description}>
  <Header />

  <main class="pt-24 pb-20 bg-cream min-h-screen">
    <article class="max-w-3xl mx-auto px-6">
      <!-- Back link -->
      <a
        href="/blog"
        class="inline-flex items-center text-text-secondary hover:text-orange transition-colors mb-8"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Blog
      </a>

      <!-- Post Header -->
      <header class="mb-10">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-sansita font-bold text-text-dark mb-4 leading-tight">
          {post.title}
        </h1>

        <div class="flex items-center gap-2 text-sm text-text-secondary mb-4">
          {post.publishedAt && (
            <time>
              {new Date(post.publishedAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          )}
          {post.author && (
            <>
              <span>by</span>
              <span class="text-orange">{post.author}</span>
            </>
          )}
          {post.readTime && (
            <>
              <span>â€¢</span>
              <span>{post.readTime} min read</span>
            </>
          )}
        </div>

        {post.tags && post.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {post.tags.map((tag: string) => (
              <span class="px-3 py-1 text-sm rounded-full bg-orange/10 text-orange border border-orange/20">
                {tag}
              </span>
            ))}
          </div>
        )}

        {post.description && (
          <p class="text-xl text-text-secondary leading-relaxed">
            {post.description}
          </p>
        )}
      </header>

      <!-- Hero Image -->
      {post.heroImage && (
        <img
          src={urlFor(post.heroImage).width(800).height(400).url()}
          alt={post.title}
          class="w-full h-64 md:h-96 object-cover rounded-card mb-8"
        />
      )}

      <!-- Post Content -->
      {post.content && <PortableText value={post.content} />}

      <!-- Share Section -->
      <div class="mt-16 pt-8 border-t border-border-light">
        <p class="text-text-secondary mb-4">Share this article:</p>
        <div class="flex gap-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-orange transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
            </svg>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-orange transition-colors"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
            </svg>
          </a>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style is:global>
  .prose {
    color: var(--color-text-dark);
  }

  .prose h2, .prose h3, .prose h4 {
    font-family: var(--font-sansita);
    font-weight: 700;
    color: var(--color-text-dark);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h2 {
    font-size: 1.75rem;
  }

  .prose h3 {
    font-size: 1.5rem;
  }

  .prose h4 {
    font-size: 1.25rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.75;
  }

  .prose strong {
    color: var(--color-text-dark);
    font-weight: 600;
  }

  .prose em {
    font-style: italic;
  }

  .prose a {
    color: var(--color-orange);
    text-decoration: underline;
  }

  .prose a:hover {
    color: var(--color-orange-dark);
  }

  .prose blockquote {
    border-left: 4px solid var(--color-orange);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }
</style>
