---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/whats-new', label: "What's New" },
  { href: '/support', label: 'Support' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-blackberry/95 backdrop-blur-sm">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2">
      <img src="/images/app-icon.png" alt="Mealvana" class="w-8 h-8 rounded-lg" />
      <span class="font-sansita text-xl font-bold text-text-light">Mealvana Endurance</span>
    </a>

    <div class="hidden md:flex items-center gap-8">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-text-light/80 hover:text-text-light transition-colors font-inter"
        >
          {item.label}
        </a>
      ))}
      <a href="https://testflight.apple.com/join/1HJG86nz" target="_blank" rel="noopener noreferrer" class="btn-primary text-sm py-2 px-6">
        Download
      </a>
    </div>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="md:hidden text-text-light p-2"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-blackberry-light px-6 py-4">
    {navItems.map((item) => (
      <a
        href={item.href}
        class="block py-2 text-text-light/80 hover:text-text-light transition-colors"
      >
        {item.label}
      </a>
    ))}
    <a href="https://testflight.apple.com/join/1HJG86nz" target="_blank" rel="noopener noreferrer" class="btn-primary inline-block mt-4 text-sm py-2 px-6">
      Download
    </a>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
